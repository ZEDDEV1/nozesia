# AgenteDeia - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# REQUIRED
# ==========================================

# Database URL (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/agentedeia"

# JWT Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-change-in-production"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==========================================
# WHATSAPP (WPPConnect)
# ==========================================

WPPCONNECT_URL="http://localhost:21465"
WPPCONNECT_SECRET="AGENTEDEIA_SECRET_2024"

# ==========================================
# OPENAI
# ==========================================

OPENAI_API_KEY="sk-your-openai-api-key"

# ==========================================
# OPTIONAL - Redis (Upstash)
# ==========================================
# Get these from https://upstash.com

# UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="AXxxxxxxxx"

# ==========================================
# OPTIONAL - Payments (Mercado Pago)
# ==========================================

# MERCADOPAGO_ACCESS_TOKEN="APP_USR-xxxx"
# MERCADOPAGO_PUBLIC_KEY="APP_USR-xxxx"

# ==========================================
# OPTIONAL - Email (Resend)
# ==========================================

# RESEND_API_KEY="re_xxxx"
# EMAIL_FROM="noreply@yourdomain.com"

# ==========================================
# OPTIONAL - File Upload (Cloudinary)
# ==========================================

# CLOUDINARY_CLOUD_NAME="your-cloud"
# CLOUDINARY_API_KEY="xxx"
# CLOUDINARY_API_SECRET="xxx"

# ==========================================
# OPTIONAL - Error Tracking (Sentry)
# ==========================================

# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# ==========================================
# OPTIONAL - WebSocket (Real-time)
# ==========================================
# Enable WebSocket for real-time updates
# Requires running with: npm run start:socket

# NEXT_PUBLIC_SOCKET_ENABLED="true"
# NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

# ==========================================
# OPTIONAL - Redis (for BullMQ queues)
# ==========================================
# Required for message queue processing
# Install locally: apt install redis-server
# Or use a managed Redis service

REDIS_URL="redis://localhost:6379"


